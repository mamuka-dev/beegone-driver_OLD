<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.gotaxi.driver.Utilities.MyBoldTextView
                android:id="@+id/tv_pkg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Yearly 20$"
                android:textSize="@dimen/font_x_large"
                android:textStyle="bold" />

            <com.gotaxi.driver.Utilities.MyBoldTextView
                android:id="@+id/tv_pkg_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Expiry: 3Jan,2023"
                android:textColor="@color/red"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/btn_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorPrimary"
            android:clickable="false"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
