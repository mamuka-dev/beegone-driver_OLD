<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:elevation="@dimen/_10sdp"
        android:id="@+id/lnrTitle"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/text_color_white"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/s_backArrow"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="0.10"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:src="@drawable/back_drawable" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.80"
            android:gravity="center_vertical"
            android:text="@string/support"
            android:fontFamily="@font/sfd_regular"
            android:textColor="@color/black_text_color"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/support_available_24_7_but_sometime_nwait_time_can_be_longer"
                android:fontFamily="@font/sfd_regular"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/font_large" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/img_executive"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_txt"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/helpagent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.80"
                        android:gravity="center_vertical"
                        android:text="@string/chat_with_our_support"
                        android:fontFamily="@font/sfd_regular"
                        android:textColor="@color/grey_80"
                        android:textSize="@dimen/font_medium" />

                    <ImageView
                        android:id="@+id/img_chat"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/chat"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.80"
                        android:gravity="center_vertical"
                        android:text="@string/call_us"
                        android:fontFamily="@font/sfd_regular"
                        android:textColor="@color/grey_80"
                        android:textSize="@dimen/font_medium" />

                    <ImageView
                        android:id="@+id/img_phone"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/img_mail"
                        app:srcCompat="@drawable/ic_phone_black_24dp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.80"
                        android:gravity="center_vertical"
                        android:text="@string/mail_us"
                        android:fontFamily="@font/sfd_regular"
                        android:textColor="@color/grey_80"
                        android:textSize="@dimen/font_medium" />

                    <ImageView
                        android:id="@+id/img_mail"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/email" />
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lnrIcons"
        android:layout_width="match_parent"
        android:layout_below="@+id/img_executive"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal">


    </LinearLayout>


</LinearLayout>
