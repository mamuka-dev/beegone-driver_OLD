<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:elevation="@dimen/_10sdp"
                android:id="@+id/lnrTitle"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/text_color_white"
                tools:ignore="UnusedAttribute">

                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="0.10"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:src="@drawable/back_drawable" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.80"
                    android:gravity="center_vertical"
                    android:text="@string/taxi_meter"
                    android:fontFamily="@font/sfd_regular"
                    android:textColor="@color/black_text_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <pl.droidsonroids.gif.GifImageView
                android:layout_marginTop="-100dp"
                android:layout_marginBottom="-100dp"
                android:id="@+id/mainimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/taximeter_startnow" />

            <LinearLayout
                android:background="@color/white"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="@string/time" />

                    <Chronometer
                        android:id="@+id/chronometer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfd_regular"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_60" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="@string/distance" />

                    <TextView
                        android:id="@+id/distancetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:text="0.00 KM"
                        android:fontFamily="@font/sfd_regular"
                        android:textColor="@color/grey_80" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dot_lines"
                android:maxLines="1"
                android:textColor="@color/black" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textSize="25sp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:text="@string/speed" />

                <TextView
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="0.00 KM/Hour"
                    android:fontFamily="@font/sfd_regular"
                    android:textColor="@color/grey_80" />
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:id="@+id/latlong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/sfd_regular"
                android:textColor="@color/grey_80" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dot_lines"
                android:maxLines="1"
                android:textColor="@color/black" />

            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/start_now"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_shape"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="@string/start_now"
                android:textColor="@color/black_text_color"
                android:textSize="20sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dot_lines"
                android:maxLines="1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/invoice_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/invoice"
                android:fontFamily="@font/sfd_regular"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.gotaxi.driver.Utilities.MyTextView
                        android:paddingStart="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/base_price"
                        android:textStyle="bold" />

                    <com.gotaxi.driver.Utilities.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text=":"
                        android:textStyle="bold" />

                    <com.gotaxi.driver.Utilities.MyTextView
                        android:id="@+id/meter_base"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/sample_amt"
                        android:textColor="@color/black_text_color" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.gotaxi.driver.Utilities.MyTextView
                        android:paddingStart="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/distance_price"
                        android:textStyle="bold" />

                    <com.gotaxi.driver.Utilities.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text=":"
                        android:textStyle="bold" />

                    <com.gotaxi.driver.Utilities.MyTextView
                        android:id="@+id/meter_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/sample_amt"
                        android:textColor="@color/black_text_color" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:paddingStart="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/grey_80"
                        android:text="@string/total"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.gotaxi.driver.Utilities.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text=":"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/meter_total"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/grey_80"
                        android:text="@string/sample_amt"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/ride_completed"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_shape1"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="@string/ride_completed"
                android:textColor="@color/black_text_color"
                android:textSize="20sp"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>