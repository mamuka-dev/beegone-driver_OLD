<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragment.ManageBankAccountFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:elevation="@dimen/_10sdp"
                    android:id="@+id/lnrTitle"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/text_color_white"
                    tools:ignore="UnusedAttribute">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="0dp"
                        android:layout_height="26dp"
                        android:layout_weight="0.10"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:padding="5dp"
                        android:src="@drawable/back_drawable" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.80"
                        android:gravity="center_vertical"
                        android:text="@string/manage_account"
                        android:fontFamily="@font/sfd_regular"
                        android:textColor="@color/black_text_color"
                        android:textSize="18sp" />
                </LinearLayout>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/provider_img"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_profile_placehodler" />

                <TextView
                    android:id="@+id/provider_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/sfd_regular" />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/acc_currentbalance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/sfd_regular"
                            android:textStyle="bold"
                            android:text="$0.00" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/sfd_regular"
                            android:text="@string/current_balance" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/revenue_report"
                    android:gravity="end" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="8dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/card_elevation"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/acc_revenue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:text="0.00"
                                android:textColor="@color/green"
                                android:fontFamily="@font/sfd_regular"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="@color/colorAccent"
                                android:fontFamily="@font/sfd_regular"
                                android:text="@string/revenue_s" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="8dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/card_elevation"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/acc_withdrawn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:textColor="@color/red"
                                android:fontFamily="@font/sfd_regular"
                                android:textStyle="bold"
                                android:text="0.00" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="@color/colorAccent"
                                android:fontFamily="@font/sfd_regular"
                                android:text="@string/withdrawn" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/acc_pendingwith"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#FFC107"
                            android:fontFamily="@font/sfd_regular"
                            android:textStyle="bold"
                            android:text="0.00" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/grey_60"
                            android:fontFamily="@font/sfd_regular"
                            android:text="@string/pending_withdrawal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/view_bank_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="24dp"
                                android:tint="@color/grey_60" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="@color/colorAccent"
                                android:fontFamily="@font/sfd_regular"
                                android:text="@string/bank_account" />

                            <ImageView
                                android:id="@+id/edit_bank"
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="24dp"
                                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                                android:tint="@color/grey_60" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/spacing_middle"
                            android:background="@drawable/line_dash_grey_20" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.50"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular"
                                android:text="@string/bank_name" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular"
                                android:text=":" />

                            <TextView
                                android:id="@+id/b_bankname"
                                android:layout_width="0dp"
                                android:layout_weight="0.50"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.50"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular"
                                android:text="@string/ifsc_code" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular"
                                android:text=":" />

                            <TextView
                                android:id="@+id/b_ifsc"
                                android:layout_width="0dp"
                                android:layout_weight="0.50"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.50"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular"
                                android:text="@string/account_holder_name" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular"
                                android:text=":" />

                            <TextView
                                android:id="@+id/b_accountholdername"
                                android:layout_width="0dp"
                                android:layout_weight="0.50"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.50"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular"
                                android:text="@string/account_number" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular"
                                android:text=":" />

                            <TextView
                                android:id="@+id/b_accnumber"
                                android:layout_width="0dp"
                                android:layout_weight="0.50"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.50"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular"
                                android:text="@string/account_type" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular"
                                android:text=":" />

                            <TextView
                                android:id="@+id/b_type"
                                android:layout_width="0dp"
                                android:layout_weight="0.50"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfd_regular" />
                        </LinearLayout>

                        <Button
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/with_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/round_corner_primary_button"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="@string/withdraw_current_balance"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_button"
                            android:visibility="visible" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>


        <FrameLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <include layout="@layout/edit_bank_account" />

        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>